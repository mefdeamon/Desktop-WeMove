<Application x:Class="Deamon.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Deamon">
    <Application.Resources>
        <ResourceDictionary>
            <local:ServiceLocator x:Key="Locator"/>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/UiCore/ValueConverters/ValueConverter.xaml"/>
                <ResourceDictionary Source="/Themes/DefaultStyles.xaml"/>
                <ResourceDictionary Source="/UiCore/Styles/Buttons.xaml"/>
                <ResourceDictionary Source="/UiCore/Styles/TextBoxs.xaml"/>
                <ResourceDictionary Source="/UiCore/Styles/PasswordBoxs.xaml"/>
                <ResourceDictionary Source="/UiCore/Styles/CheckBoxs.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
